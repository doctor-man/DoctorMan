const quote = async(quotes, author, type) => new Promise((resolve, reject) => {
    const q = quotes.replace(/ /g, '%20').replace('\n', '%5Cn')
    fetchJson('https://parade.com/937586/parade/life-quotes/' + q + '&author=' + author + '&tipe=' + type + '/')
        .then((res) => {
            resolve(res.result)
        })
        .catch((err) => {
            reject(err)
        })

})

