const sreddit = async(reddit) => new Promise((resolve, reject) => {
    fetchJson('https://meme-api.herokuapp.com/gimme/' + reddit + '/')
        .then((rest) => {
            resolve(rest.url)
        })
        .catch((errr) => {
            reject(errr)
        })
})

